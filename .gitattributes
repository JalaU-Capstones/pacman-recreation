# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cs text diff=csharp
*.axaml text
*.xaml text
*.xml text
*.json text
*.txt text
*.md text

# Scripts
*.sh text eol=lf
*.py text eol=lf

# Config files
*.config text
*.props text
*.targets text
.gitignore text
.gitattributes text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.wav binary
*.mp3 binary
*.ogg binary
*.dll binary
*.exe binary
*.pdb binary

# Visual Studio
*.sln text eol=crlf
*.csproj text
*.props text
*.targets text

# Line endings
*.cs text eol=lf
*.axaml text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.git export-ignore
