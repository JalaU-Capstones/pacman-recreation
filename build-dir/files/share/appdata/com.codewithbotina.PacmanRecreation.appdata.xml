<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.codewithbotina.PacmanRecreation</id>
  <name>Pacman Recreation</name>
  <summary>Classic Pac-Man arcade game with multiplayer</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>
      A faithful recreation of the classic Pac-Man arcade game with modern features.
      Navigate mazes, collect dots, avoid ghosts, and compete with friends in multiplayer mode.
    </p>
    <p>Features:</p>
    <ul>
      <li>Classic single-player mode with 3 levels</li>
      <li>Multiplayer mode supporting up to 5 players</li>
      <li>Original ghost AI behaviors (Blinky, Pinky, Inky, Clyde)</li>
      <li>Profile system to track high scores</li>
      <li>Authentic arcade sounds and graphics</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.codewithbotina.PacmanRecreation.desktop</launchable>

  <screenshots>
