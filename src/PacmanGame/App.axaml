<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:PacmanGame"
             x:Class="PacmanGame.App"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/Theme.axaml" />
        <StyleInclude Source="/Styles/ButtonStyles.axaml" />
    </Application.Styles>

    <Application.Resources>
        <!-- ArcadeFont is also defined in Theme.axaml to avoid StyleInclude load-order issues. -->
        <FontFamily x:Key="ArcadeFont">Consolas, Courier New, monospace</FontFamily>
    </Application.Resources>

</Application>
