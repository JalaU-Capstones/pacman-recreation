<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:PacmanGame"
             x:Class="PacmanGame.App"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/ButtonStyles.axaml" />
    </Application.Styles>

    <Application.Resources>
        <Color x:Key="PacmanYellow">#FFFF00</Color>
        <Color x:Key="MazeBlue">#2121FF</Color>
        <Color x:Key="BackgroundBlack">#000000</Color>

        <SolidColorBrush x:Key="PacmanYellowBrush" Color="{StaticResource PacmanYellow}" />
        <SolidColorBrush x:Key="MazeBlueBrush" Color="{StaticResource MazeBlue}" />
        <SolidColorBrush x:Key="BackgroundBlackBrush" Color="{StaticResource BackgroundBlack}" />
    </Application.Resources>

</Application>
