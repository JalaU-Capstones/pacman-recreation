<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo base para botones arcade -->
    <Style Selector="Button.arcade">
        <Setter Property="Background" Value="#2121FF"/>
        <!-- Use white text by default for strong contrast on the dark background -->
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#FFFF00"/>
        <Setter Property="BorderThickness" Value="3"/>
        <!-- Slightly smaller padding to make buttons adapt better on narrow screens -->
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Ensure any TextBlock inside Button.arcade inherits the Button's visual properties -->
    <Style Selector="Button.arcade TextBlock">
        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
        <Setter Property="FontFamily" Value="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=Button}}"/>
        <Setter Property="FontSize" Value="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"/>
        <Setter Property="FontWeight" Value="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <!-- Estado Hover / Pointer Over -->
    <Style Selector="Button.arcade:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#FFFF00"/>
        <Setter Property="Foreground" Value="#2121FF"/>
        <Setter Property="BorderBrush" Value="#2121FF"/>
    </Style>

    <Style Selector="Button.arcade:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.04)"/>
    </Style>

    <Style Selector="Button.arcade:pointerover TextBlock">
        <Setter Property="Foreground" Value="#2121FF"/>
    </Style>

    <!-- Estado Pressed -->
    <Style Selector="Button.arcade:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#FF0000"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#FFFFFF"/>
    </Style>

    <Style Selector="Button.arcade:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <Style Selector="Button.arcade:pressed TextBlock">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <!-- Focus visual -->
    <Style Selector="Button.arcade:focus /template/ ContentPresenter">
        <Setter Property="BorderBrush" Value="#FFFF00"/>
        <Setter Property="Background" Value="#2A2AFF"/>
    </Style>

    <!-- Estado Disabled -->
    <Style Selector="Button.arcade:disabled /template/ ContentPresenter">
        <Setter Property="Background" Value="#555555"/>
        <Setter Property="Foreground" Value="#BBBBBB"/>
        <Setter Property="BorderBrush" Value="#666666"/>
    </Style>

    <Style Selector="Button.arcade:disabled">
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>

    <!-- Custom variants -->
    <Style Selector="Button.arcade.danger">
        <Setter Property="Background" Value="#330000"/>
        <Setter Property="Foreground" Value="#FF0000"/>
        <Setter Property="BorderBrush" Value="#FF0000"/>
    </Style>

    <Style Selector="Button.arcade.danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#FF0000"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#FFFFFF"/>
    </Style>

    <Style Selector="Button.arcade.danger:pointerover TextBlock">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

</Styles>
