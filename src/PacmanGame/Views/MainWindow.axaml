<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PacmanGame.ViewModels"
        xmlns:views="using:PacmanGame.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1156" d:DesignHeight="1020"
        x:Class="PacmanGame.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="Pac-Man - Educational Recreation"
        SizeToContent="WidthAndHeight"
        CanResize="True"
        MinWidth="860"
        MinHeight="640"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundBrush}">

    <Grid>
        <!-- Scale down-only so the app always fits in small VM screens without overflow. -->
        <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
            <!-- Logical design surface; all views are authored for this base size. -->
            <Border Width="1156" Height="1020" Background="{DynamicResource AppBackgroundBrush}">
                <Grid>
                    <ContentControl x:Name="ContentHost" Content="{Binding CurrentViewModel}" />
                    <views:ConsoleView DataContext="{Binding ConsoleViewModel}" />
                </Grid>
            </Border>
        </Viewbox>
    </Grid>

</Window>
