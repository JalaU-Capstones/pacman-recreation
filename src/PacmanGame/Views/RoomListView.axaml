<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PacmanGame.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PacmanGame.Views.RoomListView"
             x:DataType="vm:RoomListViewModel"
             x:Name="PageRoot"
             Background="Black">
    <StackPanel Spacing="20" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="PUBLIC ROOMS" FontSize="36" Foreground="#FFFF00" HorizontalAlignment="Center"/>

        <Border BorderBrush="#FFFF00" BorderThickness="2" CornerRadius="8" Padding="10" MinWidth="600">
            <DataGrid ItemsSource="{Binding Rooms}" AutoGenerateColumns="False" CanUserSortColumns="False"
                      HeadersVisibility="Column" Background="#1A1A1A" RowBackground="Transparent" Foreground="White"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Room Name" Binding="{Binding Name}" Width="*" Foreground="White"/>
                    <DataGridTextColumn Header="Players" Binding="{Binding PlayerCount}" Width="100" Foreground="White"/>
                    <DataGridTemplateColumn Header="Join" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:RoomViewModel" x:CompileBindings="False">
                                <Button Content="JOIN"
                                        Command="{Binding $parent[DataGrid].DataContext.JoinPublicRoomCommand}"
                                        CommandParameter="{Binding}"
                                        Classes="arcade"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button Content="REFRESH" Command="{Binding RefreshCommand}" Classes="arcade" HorizontalAlignment="Center"/>

        <Button Content="JOIN PRIVATE ROOM"
                Command="{Binding ShowPrivateJoinFormCommand}"
                Classes="arcade"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"/>

        <Border IsVisible="{Binding IsPrivateJoinFormVisible}"
                Background="#1A1A1A"
                BorderBrush="#FFFF00"
                BorderThickness="2"
                CornerRadius="8"
                Padding="20"
                Margin="0,10,0,0">
            <StackPanel Spacing="15">
                <TextBlock Text="JOIN PRIVATE ROOM" FontSize="24" Foreground="#FFFF00" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" TextWrapping="Wrap"/>

                <StackPanel Spacing="5">
                    <TextBlock Text="Room Name:" Foreground="White"/>
                    <TextBox Text="{Binding PrivateRoomName}" Watermark="Enter room name..." MinWidth="300"/>
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Password:" Foreground="White"/>
                    <TextBox Text="{Binding PrivateRoomPassword}" PasswordChar="â—" Watermark="Enter password..." MinWidth="300"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="CANCEL" Command="{Binding CancelPrivateJoinCommand}" Classes="arcade" MinWidth="120"/>
                    <Button Content="JOIN" Command="{Binding JoinPrivateRoomCommand}" Classes="arcade" MinWidth="120"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Button Content="BACK" Command="{Binding BackCommand}" Classes="arcade" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </StackPanel>
</UserControl>
