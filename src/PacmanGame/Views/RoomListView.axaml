<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PacmanGame.ViewModels"
             xmlns:shared="using:PacmanGame.Shared"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PacmanGame.Views.RoomListView"
             x:DataType="vm:RoomListViewModel"
             x:Name="PageRoot"
             Background="{DynamicResource AppBackgroundBrush}">
    <Grid>
        <StackPanel Spacing="20" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="PUBLIC ROOMS" FontSize="36" Foreground="{DynamicResource AppAccentBrush}" HorizontalAlignment="Center"/>

            <Border BorderBrush="{DynamicResource AppAccentBrush}" BorderThickness="2" CornerRadius="8" Padding="10" MinWidth="600">
                <Panel>
                    <TextBlock Text="No public rooms available." IsVisible="{Binding !Rooms.Count}"
                               Foreground="{DynamicResource AppTextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ListBox ItemsSource="{Binding Rooms}" Background="Transparent" IsVisible="{Binding Rooms.Count}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="shared:RoomInfo" x:CompileBindings="False">
                                <Grid ColumnDefinitions="*,Auto,Auto" Margin="5">
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding PlayerCount, StringFormat='{}{0}/5 Players'}" Foreground="{DynamicResource AppTextMutedBrush}" VerticalAlignment="Center" Margin="20,0"/>
                                    <Button Grid.Column="2" Content="JOIN"
                                            Command="{Binding $parent[ListBox].DataContext.JoinPublicRoomCommand}"
                                            CommandParameter="{Binding}"
                                            Classes="arcade"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Panel>
            </Border>

            <Button Content="REFRESH" Command="{Binding RefreshCommand}" Classes="arcade" HorizontalAlignment="Center"/>

            <Button Content="JOIN PRIVATE ROOM"
                    Command="{Binding ShowPrivateJoinFormCommand}"
                    Classes="arcade"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>

            <Border IsVisible="{Binding IsPrivateJoinFormVisible}"
                    Background="{DynamicResource AppSurfaceBrush}"
                    BorderBrush="{DynamicResource AppAccentBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,10,0,0">
                <StackPanel Spacing="15">
                    <TextBlock Text="JOIN PRIVATE ROOM" FontSize="24" Foreground="{DynamicResource AppAccentBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{DynamicResource AppDangerBrush}" HorizontalAlignment="Center" TextWrapping="Wrap"/>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Room Name:" />
                        <TextBox Text="{Binding PrivateRoomName}" Watermark="Enter room name..." MinWidth="300"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Password:" />
                        <TextBox Text="{Binding PrivateRoomPassword}" PasswordChar="â—" Watermark="Enter password..." MinWidth="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="CANCEL" Command="{Binding CancelPrivateJoinCommand}" Classes="arcade" MinWidth="120"/>
                        <Button Content="JOIN" Command="{Binding JoinPrivateRoomCommand}" Classes="arcade" MinWidth="120"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Content="BACK" Command="{Binding BackCommand}" Classes="arcade" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Connection error alert -->
        <Border IsVisible="{Binding IsConnectionAlertVisible}"
                Background="{DynamicResource AppOverlayBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ZIndex="500">
            <Border Background="{DynamicResource AppSurfaceBrush}"
                    BorderBrush="{DynamicResource AppAccentBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="24"
                    MaxWidth="560"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="16">
                    <TextBlock Text="{Binding ConnectionAlertMessage}"
                               FontFamily="{StaticResource ArcadeFont}"
                               FontSize="22"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource AppAccentBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <Button Classes="arcade"
                            Content="OK"
                            Command="{Binding DismissConnectionAlertCommand}"
                            MinWidth="140"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- Spectator Join Prompt Modal -->
        <Border IsVisible="{Binding ShowSpectatorPrompt}"
                Background="{DynamicResource AppOverlayBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border Background="{DynamicResource AppSurfaceBrush}"
                    BorderBrush="{DynamicResource AppAccentBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20"
                    MaxWidth="450"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="15">
                    <TextBlock Text="JOIN ROOM" FontSize="24" Foreground="{DynamicResource AppAccentBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ErrorMessage}" HorizontalAlignment="Center" TextWrapping="Wrap"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"
                          Classes="responsive-buttons">
                        <Button Grid.Column="0" Content="JOIN AS SPECTATOR" Command="{Binding JoinAsSpectatorCommand}" Classes="arcade" MinWidth="150"
                                IsVisible="{Binding CanJoinAsSpectatorOption}" Margin="5"/>
                        <Button Grid.Column="1" Content="BROWSE OTHER ROOMS" Command="{Binding CancelSpectatorJoinCommand}" Classes="arcade" MinWidth="150" Margin="5"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
