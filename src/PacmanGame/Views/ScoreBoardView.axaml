<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PacmanGame.ViewModels"
             mc:Ignorable="d" d:DesignWidth="896" d:DesignHeight="1024"
             x:Class="PacmanGame.Views.ScoreBoardView"
             x:DataType="vm:ScoreBoardViewModel"
             Background="{DynamicResource AppBackgroundBrush}">

    <UserControl.Styles>
        <StyleInclude Source="/Styles/ButtonStyles.axaml" />
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Title -->
        <StackPanel Grid.Row="0"
                    Margin="0,40,0,30">
            <TextBlock Text="HIGH SCORES"
                      FontSize="60"
                      FontWeight="Bold"
                      Foreground="{DynamicResource AppAccentBrush}"
                      HorizontalAlignment="Center"
                      FontFamily="{StaticResource ArcadeFont}">
                <TextBlock.Effect>
                    <DropShadowEffect Color="{DynamicResource AppColorBorderStrong}"
                                     BlurRadius="15"
                                     OffsetX="0"
                                     OffsetY="0"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>

        <!-- Scores list -->
        <Border Grid.Row="1"
                Background="{DynamicResource AppSurfaceBrush}"
                BorderBrush="{DynamicResource AppAccentBrush}"
                BorderThickness="3"
                CornerRadius="10"
                Margin="100,0"
                Padding="40"
                MaxWidth="960">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Scores}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource AppSurface2Brush}"
                                   BorderBrush="{DynamicResource AppBorderStrongBrush}"
                                   BorderThickness="2"
                                   CornerRadius="5"
                                   Padding="20"
                                   Margin="0,5">

                                <Grid ColumnDefinitions="60,120,*,150">

                                    <!-- Rank -->
                                    <TextBlock Grid.Column="0"
                                              Text="{Binding Rank, StringFormat='#{0}'}"
                                              FontSize="24"
                                              FontWeight="Bold"
                                              Foreground="{DynamicResource AppAccentBrush}"
                                              VerticalAlignment="Center"
                                              FontFamily="{StaticResource ArcadeFont}"/>

                                    <!-- Player Name -->
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding PlayerName}"
                                              FontSize="24"
                                              FontWeight="Bold"
                                              VerticalAlignment="Center"
                                              FontFamily="{StaticResource ArcadeFont}"/>

                                    <!-- Score -->
                                    <TextBlock Grid.Column="2"
                                              Text="{Binding Score, StringFormat='{}{0:N0} pts'}"
                                              FontSize="22"
                                              Foreground="{DynamicResource AppSuccessBrush}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              FontFamily="{StaticResource ArcadeFont}"/>

                                    <!-- Date -->
                                    <TextBlock Grid.Column="3"
                                              Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}"
                                              FontSize="14"
                                              Foreground="{DynamicResource AppTextDimBrush}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              FontFamily="{StaticResource ArcadeFont}"/>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                   Margin="0,30,0,40"
                   HorizontalAlignment="Center"
                   Orientation="Horizontal"
                   Spacing="20">

            <Button Classes="arcade"
                    Command="{Binding ViewGlobalLeaderboardCommand}"
                    MinWidth="300">
                <TextBlock Text="GLOBAL TOP 10"
                           FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=Button}}"
                           FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                           FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>
            </Button>

            <Button Classes="arcade"
                    Command="{Binding ReturnToMenuCommand}"
                    MinWidth="300">
                <TextBlock Text="RETURN TO MENU"
                           FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=Button}}"
                           FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}}"
                           FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=Button}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>
            </Button>

        </StackPanel>

    </Grid>

</UserControl>
